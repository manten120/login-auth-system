<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p><%= message %></p>

    <% if(type === 'forgetPassword') { %>
      <form method="post" action="/forget-password" onsubmit="disableSubmit()">
    <% } else { %>
      <form method="post" action="/register" onsubmit="disableSubmit()">
    <% } %>
      <div>
        <label for="email">Eメールアドレス：</label>
        <input type="email" id="email" name="email" required/>
      </div>
          <% if(type === 'forgetPassword') { %>
            <button id="submit" type="submit">送信する</button>
          <% } else { %>
            <button id="submit" type="submit">登録する</button>
          <% } %>
        </button>
      </div>
    </form>
  </body>
  <script>
    function disableSubmit() {
      const button = document.getElementById('submit');
      button.disabled = true;
      button.value = '送信中....';
    }
  </script>
</html>
